<T3DataStructure>
    <sheets>
        <sDEF>
            <ROOT>
                <sheetTitle>
                    Allgemeine Einstellungen
                </sheetTitle>
                <type>array</type>
                <el>
                    <settings.pid>
                        <label>
                            PageUID - Seite wo sich das Bloglist-Plugin befindet.
                        </label>
                        <config>
                            <type>group</type>
                            <allowed>pages</allowed>
                            <maxitems>1</maxitems>
                            <minitems>1</minitems>
                            <size>1</size>
                            <suggestOptions>
                                <default>
                                    <additionalSearchFields>nav_title, alias, url</additionalSearchFields>
                                    <addWhere>AND pages.doktype = 1</addWhere>
                                </default>
                            </suggestOptions>
                        </config>
                    </settings.pid>

                    <settings.dataPid>
                      <label>
                        DataUID - Ordner mit den Datens√§tzen
                      </label>
                      <config>
                          <type>group</type>
                          <internal_type>db</internal_type>
                          <allowed>pages</allowed>
                          <maxitems>1</maxitems>
                          <minitems>1</minitems>
                          <size>1</size>
                          <addWhere>AND pages.doktype = 254</addWhere>
                      </config>
                    </settings.dataPid>

                    <settings.animate>
                        <label>
                            Tagcloud animieren (jQuery erforderlich)
                        </label>
                        <onChange>reload</onChange>
                        <config>
                            <type>check</type>
                        </config>
                    </settings.animate>

                    <settings.textcolor>
                        <label>Textfarbe der Hyperlinks</label>
                        <config>
                            <type>input</type>
                            <renderType>colorpicker</renderType>
                            <size>20</size>
                            <eval>trim</eval>
                        </config>
                        <displayCond>FIELD:settings.animate:=:1</displayCond>
                    </settings.textcolor>

                    <settings.bordercolor>
                        <label>Rahmenfarbe beim Hovern der Hyperlinks</label>
                        <config>
                            <type>input</type>
                            <renderType>colorpicker</renderType>
                            <size>20</size>
                            <eval>trim</eval>
                        </config>
                        <displayCond>FIELD:settings.animate:=:1</displayCond>
                    </settings.bordercolor>

                    
                </el>
            </ROOT>
        </sDEF>
    </sheets>
</T3DataStructure>