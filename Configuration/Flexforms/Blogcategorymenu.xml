<T3DataStructure>
    <sheets>
        <sDEF>
            <ROOT>
                <sheetTitle>
                    Allgemeine Einstellungen
                </sheetTitle>
                <type>array</type>
                <el>
                    <settings.pid>
                        <label>
                            PageUID - Seite wo sich das Bloglist-Plugin befindet.
                        </label>
                        <config>
                            <type>group</type>
                            <allowed>pages</allowed>
                            <maxitems>1</maxitems>
                            <minitems>1</minitems>
                            <size>1</size>
                            <suggestOptions>
                                <default>
                                    <additionalSearchFields>nav_title, alias, url</additionalSearchFields>
                                    <addWhere>AND pages.doktype = 1</addWhere>
                                </default>
                            </suggestOptions>
                        </config>
                    </settings.pid>
                    
                </el>
            </ROOT>
        </sDEF>
    </sheets>
</T3DataStructure>